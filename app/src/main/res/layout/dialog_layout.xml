<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:gravity="center"
    android:maxWidth="500px"
    android:background="#e77070"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80px">

        <ImageView
            android:id="@+id/warningicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@null"
            android:textStyle="bold"
            android:src="@drawable/warning30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="100px"
            android:text="Look ahead!!!"
            android:textColor="#ffffff"
            android:textSize="60px" />

    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="80px"
        android:background="@null"
        android:src="@drawable/accident" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:text="       I understand       "
        android:layout_marginBottom="50px"
        android:textColor="#ffffff"
        android:background="#282f33"
        android:onClick="dismissListener"/>

</LinearLayout>