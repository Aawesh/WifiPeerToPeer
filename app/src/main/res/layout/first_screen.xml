<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >


    <Button
        android:id="@+id/pedestrianButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="196dp"
        android:text="Pedestrian"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/driverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver"
        android:layout_alignBaseline="@+id/pedestrianButton"
        android:layout_alignBottom="@+id/pedestrianButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="42dp" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/driverButton"
        android:layout_below="@+id/pedestrianButton"
        android:layout_marginEnd="53dp"
        android:layout_marginTop="27dp"
        android:text="Exit" />

    <TextView
        android:id="@+id/infoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text=""
        android:layout_below="@+id/exitButton"
        android:layout_alignStart="@+id/pedestrianButton"
        android:layout_marginTop="27dp" />

    <TextView
        android:id="@+id/infoView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignTop="@+id/infoView"
        android:layout_alignStart="@+id/infoView"
        android:layout_marginTop="47dp" />

    <TextView
        android:id="@+id/infoView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoView2"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@+id/infoView2"
        android:text="" />


</RelativeLayout>
