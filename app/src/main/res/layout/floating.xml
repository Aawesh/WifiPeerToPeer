<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:scaleType = "centerCrop"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton0"
        android:layout_width="57dp"
        android:layout_height="67dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:layout_marginLeft="200px"
        android:visibility="invisible"
        android:labelFor="@id/floatingActionButton2"
        app:backgroundTint="#fffafafa"
        app:elevation="0dp" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="top|left"
        android:layout_margin="16dp"
        android:src="@drawable/car"
        app:fabSize="normal"
        android:clickable="true"
        app:elevation="15dp"
        app:borderWidth="0dp"
        app:backgroundTint="@color/colorGreen"
        app:layout_anchor="@id/floatingActionButton0"
        app:layout_anchorGravity="left"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|left"
        android:layout_margin="16dp"
        android:visibility="invisible"
        app:backgroundTint="#fffafafa"
        app:elevation="0dp"
        app:layout_anchor="@id/floatingActionButton4"
        app:layout_anchorGravity="left" />



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="bottom|left"
        android:layout_margin="16dp"
        android:src="@drawable/walking100"
        android:clickable="true"
        app:borderWidth="0dp"
        app:elevation="15dp"
        app:fabSize="normal"
        app:backgroundTint="@color/colorGreen"
        app:layout_anchor="@id/floatingActionButton2"
        app:layout_anchorGravity="left"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180px"
            android:layout_marginTop="1350px"
            android:text="PEDESTRIAN"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210px"
            android:layout_marginTop="1350px"
            android:text="DRIVER"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold" />


    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>